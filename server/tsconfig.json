{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "lib": ["es2021", "DOM", "dom.iterable"],
    "module": "commonjs",
    "target": "es2021",

    "outDir": "./build",
    // "rootDirs": ["./server_source, ../shared"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "paths": {
      "@custom_types/*": ["../shared/*"],
      "@content/*": ["../content/*"]
    }
  }
}